{
  "extends": "airbnb",
  "plugins": ["import"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "client"
        ]
      }
    }
  },
  "rules": {
    "semi": 2,
    "new-cap": 0,
    "radix": 0,
    "no-alert": 0,
    "no-cond-assign": 0,
    "no-case-declarations": 0,
    "no-console": ["error", { "allow": ["warn", "error", "assert"] }],
    "quote-props": 0,
    "react/prop-types": 0,
    "react/prefer-stateless-function": 0,
    "react/no-did-mount-set-state": 0,
    "import/no-extraneous-dependencies": 0,
    "react/jsx-filename-extension": 0,
  }
}
